@using Academia.ClienteWeb.Models
@{
    ViewData["Title"] = "Solicitudes";

    List<Catalogo> selectGrimorio = (List<Catalogo>)ViewBag.SelectGrimorios;
    List<Catalogo> selectAfinidad = (List<Catalogo>)ViewBag.SelectAfinidad;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <main class="page">
        <div class="titulo-pagina">
            <h2>Solicitudes estudiantes</h2>
            <hr class="red">
            <div class="rectangulo-dorado"></div>
        </div>

        <div class="row panel-filtro">
            <div class="col-md-12">
                <div>
                    <h4>Filtro</h4>
                </div>
                <div>
                    <div class="col-md-4">
                        Grimorio
                        <div>
                            @Html.DropDownList("s_grimorio", new SelectList(selectGrimorio, "Id", "Valor"), "Todas", htmlAttributes: new { style = "min-width:100%; max-width:100%;", Class = "sdos" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="row pull-right">
                    <div class="col-md-2">
                        <button id="btn_Buscar" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div style="margin:15px">
                <div id="contenido" style="min-width:100%; max-width:100%; height:400px"></div>
            </div>
        </div>
        <div class="row panel-filtro">
            <div class="col-md-12">
                <div>
                    <h4>Nueva Solicitud</h4>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <p class="encabezado">Nombre*</p>
                        <div>
                            <input type="text" id="ipt-nombre" style="min-width:90%; max-width:90%; width:90%" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <p class="encabezado">Apellido*</p>
                        <div>
                            <input type="text" id="ipt-apellido" style="min-width:90%; max-width:90%; width:90%" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <p class="encabezado">Identificación*</p>
                        <div>
                            <input type="text" id="ipt-identificacion" style="min-width:90%; max-width:90%; width:90%" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <p class="encabezado">Edad*</p>
                        <div>
                            <input type="number" id="ipt-edad" style="min-width:50%; max-width:50%; width:50%" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <p class="encabezado">Afinidad*</p>
                        <div>
                            @Html.DropDownList("ipt-afinidad", new SelectList(selectAfinidad, "Id", "Valor"), "Seleccione", htmlAttributes: new { style = "min-width:90%; max-width:90%;" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="row" style="text-align:right">
                    <div class="col-md-2">
                        <button id="btn_Guardar" class="btn btn-primary">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>

@Html.Partial("_SpinnerLoader")

@section Scripts {
    <link href="~/Content/App/select2.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/app/select2.js"></script>
    <script src="~/Scripts/app/site.js"></script>
    <link href="~/Content/App/site.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>

    <script type="text/javascript">
        var urls = {
            obtenerSolicitudes: '@Url.Action("ObtenerSolicitudes", "Home")',
            GuardarSolicitudes: '@Url.Action("GuardarSolicitudes", "Home")',
            eliminarSolicitudes: '@Url.Action("EliminarSolicitudes", "Home")'
        };
    </script>
} 